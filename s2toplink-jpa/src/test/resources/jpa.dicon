<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE components PUBLIC "-//SEASAR//DTD S2Container 2.4//EN"
	"http://www.seasar.org/dtd/components24.dtd">
<components initializeOnCreate="true">
	<include path="javaee5.dicon"/>
	<include path="s2toplink-jpa.dicon"/>
	
	<component class="org.seasar.toplink.jpa.impl.S2TopLinkPersistenceUnitProvider">
		<property name="javaSECMPInitializer">
			@org.seasar.toplink.jpa.impl.S2JavaSECMPInitializer@getJavaSECMPInitializer("s2toplink-jpa.dicon", #{})
		</property>
	</component>

	<!--
	<component class="org.seasar.toplink.jpa.impl.S2TopLinkContainerPersistenceUnitProvider"/>
	-->
	
	<component class="oracle.toplink.essentials.ejb.cmp3.EntityManagerFactoryProvider"/>
	
	<component class="org.seasar.toplink.jpa.impl.S2TopLinkDialect"/>
	<component class="org.seasar.toplink.jpa.metadata.TopLinkEntityDescProvider"/>
	<component class="org.seasar.toplink.jpa.unit.TopLinkEntityReaderProvider"/>

	<component name="entityManagerFactory" class="javax.persistence.EntityManagerFactory">
		jpa.persistenceUnitManager.getEntityManagerFactory("persistenceUnit")
	</component>

	<component name="entityManager" class="org.seasar.framework.jpa.impl.TxScopedEntityManagerProxy">
		<aspect pointcut="createNamedQuery">
			<component class="org.seasar.toplink.jpa.aop.interceptors.S2TopLinkEntityManagerInterceptor"/>
		</aspect>
	</component>
</components>
