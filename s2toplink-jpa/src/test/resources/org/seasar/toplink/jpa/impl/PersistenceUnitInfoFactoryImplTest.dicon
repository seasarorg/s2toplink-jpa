<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE components PUBLIC "-//SEASAR//DTD S2Container 2.4//EN"
	"http://www.seasar.org/dtd/components24.dtd">
<components>
	<include path="convention.dicon"/>
	<include path="jpa-support.dicon"/>

	<component name="javaSECMPInitializer" class="org.seasar.toplink.jpa.impl.S2JavaSECMPInitializer"/>

	<component class="org.seasar.toplink.jpa.impl.PersistenceUnitInfoFactoryImpl"/>
	
	<component class="org.seasar.toplink.jpa.S2TopLinkPersistenceUnitInfo" instance="prototype">
		<aspect>
			<component class="org.seasar.framework.aop.interceptors.DelegateInterceptor">
				<property name="target">
					<component class="oracle.toplink.essentials.ejb.cmp3.persistence.SEPersistenceUnitInfo">
						<property name="persistenceUnitName">"persistenceUnit"</property>
					</component>
				</property>
			</component>
		</aspect>
	</component>
	
	<component class="org.seasar.framework.jpa.impl.PersistenceUnitConfigurationImpl"/>

	<component class="org.seasar.framework.jpa.autodetector.MappingFileAutoDetector"/>
	
	<component class="org.seasar.framework.jpa.autodetector.PersistenceClassAutoDetector">
		<property name="classLoader">
			<component class="org.seasar.toplink.jpa.impl.S2TopLinkTempClassLoader"/>
		</property>
	</component>

	<component class="org.seasar.toplink.jpa.impl.JpaInstrumentationImpl"/>
	
</components>
